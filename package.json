{
  "name": "lipu-tenpo-website",
  "version": "0.1.0",
  "description": "Static site generator for lipu tenpo",
  "main": "index.js",
  "scripts": {
    "develop": "npm-run-all -p dev:*",
    "build": "run-s build:*",
    "dev:11ty": "eleventy --serve",
    "dev:css": "tailwindcss -i tailwind/tailwind.css -o tailwind/tailwind.out.css --watch --postcss",
    "build:11ty": "eleventy",
    "build:css": "tailwindcss -i tailwind/tailwind.css -o _site/tailwind.css --postcss",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "tokipona",
    "liputenpo"
  ],
  "author": "alifeee",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  }
}